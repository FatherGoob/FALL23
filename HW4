import java.util.*;

//Written by Gabriel Burke

public class Problem1 {
    //This program takes an integer as an input and outputs either even or odd
    public static void main(String[] args) {

        //This scanner takes the integer from the user
        Scanner input1 = new Scanner(System.in);
        System.out.println("Please enter and integer: ");
        int number = input1.nextInt();

        //This checks if the number is dividable by 2
        //If the number is dividable by 2 then it is even, if not it is odd

        if (number % 2 == 0)
                System.out.println(number + " Is even!");
        else
           System.out.println(number + " is odd!");

    }
}
